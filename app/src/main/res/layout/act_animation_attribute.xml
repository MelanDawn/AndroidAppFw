<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/animation_attribute_description"/>

    <ImageView
        android:id="@+id/animation_attribute_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/act_iv_demo_mini"
        android:scaleType="center"
        android:contentDescription="@string/app_name"/>

    <ImageView
        android:id="@+id/animation_attribute_alpha_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/act_iv_demo_h"
        android:scaleType="center"
        android:contentDescription="@string/app_name"/>
    <ImageView
        android:id="@+id/animation_attribute_scale_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/act_iv_demo_mini"
        android:scaleType="center"
        android:contentDescription="@string/app_name"/>
    <ImageView
        android:id="@+id/animation_attribute_rotate_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/act_iv_demo_v"
        android:scaleType="center"
        android:contentDescription="@string/app_name"/>
    <ImageView
        android:id="@+id/animation_attribute_translate_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/act_iv_demo_mini"
        android:scaleType="center"
        android:contentDescription="@string/app_name"/>

</LinearLayout>