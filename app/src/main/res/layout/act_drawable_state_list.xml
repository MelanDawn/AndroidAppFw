<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_item_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drawable_state_list_dsc"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/drawable_state_list_btn1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:enabled="true"
        android:background="@drawable/drawable_state_list"
        android:contentDescription="@string/app_name"/>

    <Button
        android:id="@+id/drawable_state_list_btn2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:enabled="true"
        android:background="@drawable/drawable_state_list"
        android:contentDescription="@string/app_name"/>
</LinearLayout>