<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_stub_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/item_scan_result_index_tv"
        android:layout_alignParentStart="true"
        android:layout_width="40dp"
        android:layout_height="50dp"
        style="@style/RvItemTextView"
        android:gravity="center_vertical|end"
        android:paddingHorizontal="5dp"
        android:contentDescription="@string/app_name"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/item_scan_result_index_tv"
        android:layout_toStartOf="@id/item_scan_result_connect_btn"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_scan_result_name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            style="@style/RvItemTextView"
            android:text="@string/app_name"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp" >
            <TextView
                android:id="@+id/item_scan_result_address"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                style="@style/RvItemTextView"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:id="@+id/item_scan_result_rssi"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/item_scan_result_address"
                style="@style/RvItemTextView"
                android:gravity="center_vertical|end"
                android:paddingHorizontal="5dp"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:id="@+id/item_scan_result_type"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/item_scan_result_rssi"
                style="@style/RvItemTextView"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:id="@+id/item_scan_result_bond"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/item_scan_result_type"
                style="@style/RvItemTextView"
                android:background="@color/colorAccent"
                android:contentDescription="@string/app_name"/>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/item_scan_result_connect_btn"
        style="@style/BaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:text="@string/app_name" />
</RelativeLayout>