<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_height"

            android:text="@string/tv_normal"
            android:textSize="14sp"
            android:textColor="@android:color/black"

            android:background="@color/colorPrimary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_height"

            android:gravity="center_horizontal"

            android:text="@string/tv_normal_center_h"
            android:textSize="14sp"
            android:textColor="@android:color/black"

            android:background="@color/colorAccent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_height"

            android:gravity="center_vertical"

            android:text="@string/tv_normal_center_v"
            android:textSize="14sp"
            android:textColor="@android:color/black"

            android:background="@color/colorPrimary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_height"

            android:gravity="center"

            android:text="@string/tv_normal_center"
            android:textSize="14sp"
            android:textColor="@android:color/black"

            android:background="@color/colorAccent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_height"

            android:text="@string/tv_normal_ellipse_start"
            android:textSize="14sp"
            android:textColor="@android:color/black"

            android:ellipsize="start"
            android:singleLine="true"

            android:background="@color/colorPrimary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_height"

            android:text="@string/tv_normal_ellipse_end"
            android:textSize="14sp"
            android:textColor="@android:color/black"

            android:ellipsize="end"
            android:maxLines="1"

            android:background="@color/colorAccent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_height"

            android:text="@string/tv_normal_ellipse_marquee"
            android:textSize="14sp"
            android:textColor="@android:color/black"

            android:ellipsize="marquee"
            android:singleLine="true"
            android:focusable="true"
            android:focusableInTouchMode="true"

            android:background="@color/colorPrimary"/>
    </LinearLayout>
</ScrollView>
