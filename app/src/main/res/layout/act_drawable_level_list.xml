<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_item_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drawable_level_list_dsc"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/drawable_level_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/drawable_level_list"
        android:contentDescription="@string/app_name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/drawable_level_list_btn0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="?android:buttonBarButtonStyle"
            android:background="@android:color/holo_orange_dark"
            android:gravity="center_vertical|start"
            android:text="@string/drawable_level_list_0"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/drawable_level_list_btn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="?android:buttonBarButtonStyle"
            android:background="@android:color/holo_green_light"
            android:gravity="center_vertical|start"
            android:text="@string/drawable_level_list_5"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/drawable_level_list_btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="?android:buttonBarButtonStyle"
            android:background="@android:color/holo_orange_dark"
            android:gravity="center_vertical|start"
            android:text="@string/drawable_level_list_15"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/drawable_level_list_btn3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="?android:buttonBarButtonStyle"
            android:background="@android:color/holo_green_light"
            android:gravity="center_vertical|start"
            android:text="@string/drawable_level_list_25"
            android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>